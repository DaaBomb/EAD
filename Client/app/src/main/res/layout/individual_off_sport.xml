<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="12dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="2dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/competitonDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/karla"
            android:text="Today"
            android:textSize="16dp"
            card_view:layout_constraintStart_toEndOf="@+id/imageView6"
            card_view:layout_constraintTop_toBottomOf="@+id/competitionName4" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/competitionName4"
            card_view:srcCompat="@drawable/ic_watch_blue_24dp" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/karla"
            android:text="10:00 PM"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16dp"
            card_view:layout_constraintStart_toEndOf="@+id/competitonDetails"
            card_view:layout_constraintTop_toBottomOf="@+id/competitionName3" />

        <TextView
            android:id="@+id/competitionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textColor="@color/myTextColor"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            android:textSize="16dp"
            android:text="Sport name"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/competitionName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:text="Req made by"
            android:textColor="@color/myTextColor"
            card_view:layout_constraintStart_toEndOf="@+id/competitionName"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/competitionName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="Slots remaining"
            android:textColor="@color/myTextColor"
            android:textSize="16dp"
            card_view:layout_constraintStart_toEndOf="@+id/competitionName4"
            card_view:layout_constraintTop_toBottomOf="@+id/competitionName" />

        <TextView
            android:id="@+id/competitionName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:text="4"
            android:textColor="@color/myTextColor"
            android:textSize="32dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/competitionName" />

        <Button
            android:id="@+id/participate_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/rounded_button_black"
            android:drawableLeft="@drawable/ic_check_circle_white_24dp"
            android:padding="10dp"
            android:text="Count me in!"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.497"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/competitonDetails" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
