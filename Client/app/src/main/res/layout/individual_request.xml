<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    card_view:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/visitor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/karla"
            android:padding="5dp"
            android:text="Visitor Name"
            android:textSize="16dp"
            card_view:layout_constraintEnd_toStartOf="@+id/visitor_name2"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/divider2" />

        <TextView
            android:id="@+id/visitor_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="148dp"
            android:layout_marginRight="148dp"
            android:fontFamily="@font/karla"
            android:padding="5dp"
            android:text="Status"
            android:textColor="@color/myTextColor"
            android:textSize="16dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/divider2" />

        <TextView
            android:id="@+id/visitor_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:fontFamily="@font/karla"
            android:padding="5dp"
            android:text="Approved"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/visitor_name2" />

        <TextView
            android:id="@+id/purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/karla"
            android:gravity="end"
            android:padding="5dp"
            android:text="Purpose"
            android:textSize="16dp"
            card_view:layout_constraintEnd_toStartOf="@+id/visitor_name3"
            card_view:layout_constraintHorizontal_bias="0.314"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/visitor_name" />

        <TextView
            android:id="@+id/flatnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"
            android:fontFamily="@font/karla"
            android:gravity="end"
            android:padding="5dp"
            android:text="Flat Number"
            android:textColor="@color/myTextColor"
            android:textSize="18dp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/blockname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/karla"
            android:gravity="end"
            android:padding="5dp"
            android:text="Block Name"
            android:textColor="@color/myTextColor"
            android:textSize="18dp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toStartOf="@+id/flatnumber"
            card_view:layout_constraintHorizontal_bias="0.701"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/blockname" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

