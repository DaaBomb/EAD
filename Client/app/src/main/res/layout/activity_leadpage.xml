<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".user.Leadpage"
    tools:openDrawer="end">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".user.forum.Leadpage">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ImageView
            android:layout_width="215dp"
            android:layout_height="215dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/swarmlead1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/swarmlead2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/karla"
            android:text="Hold for 3 seconds in case of emergency!"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/panic"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="555dp"
            android:layout_height="117dp"
            android:src="@drawable/grass"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.402"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/btn_forum"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/hexa5"
            android:fontFamily="@font/karla"
            android:text="Forum"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btn_announcements"
            app:layout_constraintTop_toBottomOf="@+id/btn_gate" />

        <Button
            android:id="@+id/btn_event"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="136dp"
            android:background="@drawable/hexa2"
            android:fontFamily="@font/karla"
            android:text="Events"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btn_sports"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toEndOf="@+id/btn_residents"
            app:layout_constraintTop_toBottomOf="@+id/btn_amenities" />

        <Button
            android:id="@+id/btn_sports"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="192dp"
            android:background="@drawable/hexa7"
            android:fontFamily="@font/karla"
            android:text="Sports"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btn_gate"
            app:layout_constraintTop_toBottomOf="@+id/btn_amenities" />

        <Button
            android:id="@+id/btn_amenities"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_black"
            android:fontFamily="@font/karla"
            android:text="Amenities"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/btn_announcements"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/hexa4"
            android:fontFamily="@font/karla"
            android:text="Alerts"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_residents" />

        <Button
            android:id="@+id/btn_gate"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/hexa"
            android:fontFamily="@font/karla"
            android:textStyle="bold"
            android:text="Gate Entry"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_concierge"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn_announcements"
            app:layout_constraintTop_toBottomOf="@+id/btn_event" />

        <Button
            android:id="@+id/btn_concierge"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/hexa6"
            android:fontFamily="@font/karla"
            android:text="Concierge"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btn_forum"
            app:layout_constraintTop_toBottomOf="@+id/btn_sports" />

        <Button
            android:id="@+id/btn_residents"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="184dp"
            android:background="@drawable/hexa3"
            android:fontFamily="@font/karla"
            android:text="Chat"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_amenities" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/karla"
            android:text="Welcome Back!"
            android:textColor="@color/myTextColor"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/panic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="44dp"
            android:backgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_report_problem_black_24dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>