<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterBuilder"
    android:orientation="vertical">
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_aprt_name"
        android:hint="society name"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:met_textColorHint="@color/myTextColor"
        app:met_baseColor="@color/myTextColor"
        app:met_primaryColor="@color/myTextColor"

        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_aprt_address"
        android:hint="Apartment name"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:met_textColorHint="@color/myTextColor"
        app:met_baseColor="@color/myTextColor"
        app:met_primaryColor="@color/myTextColor"

        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_aprt_city"
        android:hint="City or Town name"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:met_textColorHint="@color/myTextColor"
        app:met_baseColor="@color/myTextColor"
        app:met_primaryColor="@color/myTextColor"
        />


    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#431F63"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


</LinearLayout>