<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".HomepageActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karla"
            android:gravity="center_horizontal"
            android:text="Who do you want to register as?"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="436dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_builder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/karla"
            android:text="Register as builder"
            android:textColor="@android:color/white"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/btn_resident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/karla"
            android:text="Register as Resident"
            android:textColor="@android:color/white"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/btn_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/karla"
            android:text="Register as Staff"
            android:textColor="@android:color/white"
            android:textSize="20sp"

            />
    </LinearLayout>
</LinearLayout>